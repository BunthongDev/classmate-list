<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="text-center mt-[150px]">
                <p class="font-extrabold text-black text-9xl">404</p>
                <p class="text-black text-3xl md:text-4xl font-light">Oops! Page not found.</p>
                <p class="text-black mt-3 md:mt-4">Sorry, the page you're looking for doesn't exist.</p>
                <a href="/" class="mt-6 bg-white text-blue-700 font-bold py-2 px-4 rounded">
                    Go Home
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
